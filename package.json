{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@rushstack/eslint-patch": "^1.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.0",
    "@semantic-release/npm": "^12.0.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.6",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.1.2",
    "postcss-html": "^1.7.0",
    "prettier": "^3.2.5",
    "sass": "^1.77.4",
    "semantic-release": "^24.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.3.1"
  },
  "scripts": {
    "prepare": "husky",
    "check:format": "prettier --check . --ignore-path .gitignore",
    "check:stylelint": "stylelint **/*.{vue,css,scss} --ignore-path .gitignore",
    "check:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format:prettier": "prettier --write . --ignore-path .gitignore",
    "format:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format:stylelint": "stylelint **/*.{vue,css,scss} --fix --ignore-path .gitignore",
    "build:lib": "bun run --filter @okyle/components build",
    "check": "run-s check:format check:stylelint check:eslint",
    "format": "run-s format:prettier format:eslint format:stylelint",
    "release": "lerna exec -- npx semantic-release",
    "build": "run-s build:lib"
  },
  "dependencies": {
    "@commitlint/config-angular": "^19.3.0"
  }
}
